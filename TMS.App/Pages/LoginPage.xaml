<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TMS.App.Controls"
             x:Class="TMS.App.Pages.LoginPage"
             BackgroundColor="{AppThemeBinding Light='#F7F7F7', Dark='#111315'}">

    <Grid RowDefinitions="*"
          ColumnDefinitions="*,*"
          ColumnSpacing="0"
          RowSpacing="0"
          Padding="0"
          HorizontalOptions="Fill"
          VerticalOptions="Fill">

        <Border Grid.Column="0"
                BackgroundColor="{AppThemeBinding Light='Teal', Dark='#006D6D'}"
                >

            <Grid>
                <Label Text="TMS"
                       FontSize="96"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       SemanticProperties.HeadingLevel="Level1"/>
            </Grid>
        </Border>

        <ScrollView Grid.Column="1">
            <Grid Padding="32,24"
                  HorizontalOptions="Fill"
                  VerticalOptions="Center"
                   RowDefinitions="Auto,*">

                <Label Grid.Row="0"
                       Text="Welcome back"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light='#1A1A1A', Dark='#EDEDED'}"
                        />

                <VerticalStackLayout Grid.Row="1"
                                     Spacing="18"
                                     HorizontalOptions="Center">

                    <Border StrokeShape="RoundRectangle 10"
                            Stroke="{AppThemeBinding Light='#E5E7EB', Dark='#2A2F33'}"
                            BackgroundColor="{AppThemeBinding Light='White', Dark='#1A1D21'}"
                            Padding="10">

                        <Grid ColumnDefinitions="*,Auto"
                              VerticalOptions="Center"
                              ColumnSpacing="10">

                            <VerticalStackLayout Grid.Column="0"
                                    Spacing="4" >
                               
                                <Label Text="Email"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light='#6B7280', Dark='#9CA3AF'}"
                                       HorizontalOptions="Start"/>

                                <controls:BorderlessEntry Placeholder="name@company.com"
                                                          Keyboard="Email"
                                                          TextColor="{AppThemeBinding Light='#111827', Dark='White'}"
                                                          PlaceholderColor="#9CA3AF"
                                                          BackgroundColor="Transparent"
                                                          IsTextPredictionEnabled="True"/>
                            </VerticalStackLayout>
                            <Button Grid.Column="1"
                                    Text="→"
                                    HeightRequest="44"
                                    Padding="20,0"
                                    CornerRadius="10"
                                    BackgroundColor="#006D6D"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    IsEnabled="False"
                                   />
                        </Grid>
                    </Border>


                    <Grid ColumnDefinitions="*,Auto,*"
                          VerticalOptions="Center"
                          Margin="0,10">

                        <BoxView Grid.Column="0"
                                 HeightRequest="1"
                                 BackgroundColor="{AppThemeBinding Light='#E5E7EB', Dark='#2A2F33'}"
                                 VerticalOptions="Center"/>

                        <Label Grid.Column="1"
                               Text="OR"
                               Margin="10,0"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light='#6B7280', Dark='#9CA3AF'}"/>

                        <BoxView Grid.Column="2"
                                 HeightRequest="1"
                                 BackgroundColor="{AppThemeBinding Light='#E5E7EB', Dark='#2A2F33'}"
                                 VerticalOptions="Center"/>
                    </Grid>


                    <ImageButton
                        Padding="10"
                        Source="ms_signin_dark.png"
                        Command="{Binding MicrosoftLoginCommand}"
                        BackgroundColor="Transparent"
                        Aspect="AspectFit"/>

                </VerticalStackLayout>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>